@model Shop.Models.Product

<div class="page-title">
    <div class="container">
        <h1>Product Delete</h1>
    </div>
</div>

<div class="container my-5">
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="row">
            <div class="col-8">

                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="ShortDesc"></label>
                    </div>
                    <div class="col-8">
                        <textarea class="summernote" id="summernoteShortDesc" asp-for="ShortDesc"></textarea>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea class="summernote" id="summernoteDescription" asp-for="Description"></textarea>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled />
                    </div>
                </div>
            </div>

            <div class="col-4">
                <div class="form-group mb-3">
                    @if (Model.Id != 0)
                    {
                        <img src="@ENV.ImagePath@Model.Image" width="100%" />
                    }
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <a asp-action="Index" class="btn btn-outline-secondary mx-2">Back</a>
            <button type="submit" class="btn btn-outline-primary mx-2">Delete</button>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('#summernoteShortDesc').summernote({
                tabsize: 2,
                height: 150,
            });
            $('#summernoteDescription').summernote({
                tabsize: 2,
                height: 300,
            });
        });
    </script>
}