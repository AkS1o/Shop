@model IEnumerable<Shop.Models.Product>

<div class="page-title">
    <div class="container">
        <h1>Product List</h1>
    </div>
</div>

<div class="container my-5">
    <a class="btn btn-outline-secondary mb-3" asp-action="Upsert"> Create new product</a>
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="60%">@item.Name</td>
                        <td width="10%">@item.Price</td>
                        <td width="10%">@item.Category.Name</td>
                        <td width="20%" class="text-center">
                            <a class="btn btn-outline-info" asp-route-Id="@item.Id" asp-action="Upsert">Edit</a>
                            <a class="btn btn-outline-delete" asp-route-Id="@item.Id" asp-action="Delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products found.</p>
    }
</div>