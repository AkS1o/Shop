@model IEnumerable<Product>

<div class="page-title">
    <div class="container">
        <h1>Shopping Cart</h1>
    </div>
</div>

<div class="container my-5">
    @if (Model.Count() > 0)
    {
        <form class="product-list product-shopping-list" method="post">
            @foreach (var item in Model)
            {
                <div class="item">
                    <div class="image-wrap">
                        <img src="@ENV.ImagePath@item.Image" />
                    </div>
                    <div class="product-data">
                        <div class="row">
                            <div class="col-9">
                                <h5 class="product-title">@item.Name</h5>
                                <div class="product-text">@Html.Raw(@item.ShortDesc)</div>
                            </div>
                            <div class="col-3">
                                <div class="product-rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <p class="product-price">@item.Price &#8372;</p>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-outline-primary" asp-action="Remove" asp-route-id="@item.Id">Remove</a>
                </div>
            }
            <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-secondary">Order</button>
            </div>
        </form>
    }
    else
    {
        <p>cart empty</p>
    }
</div>