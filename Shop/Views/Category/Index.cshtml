@model IEnumerable<Shop.Models.Category>

<div class="page-title">
    <div class="container">
        <h1>Category List</h1>
    </div>
</div>

<div class="container my-5">
    <a class="btn btn-outline-secondary mb-3" asp-controller="Category" asp-action="Create">Create new category</a>
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Show Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="40%">@item.Name</td>
                        <td width="40%">@item.ShowOrder</td>
                        <td width="20%" class="text-center">
                            <a class="btn btn-outline-info" asp-route-id="@item.Id" asp-controller="Category" asp-action="Edit">Edit</a>
                            <a class="btn btn-outline-delete" asp-route-id="@item.Id" asp-controller="Category" asp-action="Delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No categories found.</p>
    }
</div>
