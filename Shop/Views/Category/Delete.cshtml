@model Shop.Models.Category

<div class="page-title">
    <div class="container">
        <h1>Category Delete</h1>
    </div>
</div>

<div class="container my-5">
    <form method="post" asp-action="DeletePOST" asp-controller="Category">
        <input asp-for="Id" hidden />

        <div class="row">
            <div class="col-8">

                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="ShowOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ShowOrder" disabled class="form-control" />
                    </div>
                </div>

            </div>
        </div>

        <div class="d-flex justify-content-center">
            <a asp-action="Index" class="btn btn-outline-secondary mx-2">Back</a>
            <input type="submit" class="btn btn-outline-primary mx-2" value="Delete" />
        </div>

    </form>
</div>